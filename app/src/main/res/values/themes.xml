<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NotesCleanArchitecture" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ddc9c8</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#f8e5ec</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Detail">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?colorControlNormal</item>
    </style>
</resources>